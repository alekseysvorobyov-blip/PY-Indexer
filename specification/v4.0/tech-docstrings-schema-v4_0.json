{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TECH-DOCSTRINGS v4.0",
  "description": "Documentation strings with hierarchical location references",
  "type": "object",
  "required": ["meta", "docstrings_text", "docstrings"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^4\\.0$"
        },
        "generated": {
          "type": "string",
          "format": "date-time"
        },
        "project": {
          "type": "string"
        }
      }
    },
    "docstrings_text": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Docstring text dictionary"
    },
    "docstrings": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": [
          {
            "type": "integer",
            "minimum": 0,
            "description": "location_id (references location in TECH-LOCATION)"
          },
          {
            "type": "integer",
            "minimum": 0,
            "description": "docstrings_text_idx"
          }
        ]
      }
    }
  }
}